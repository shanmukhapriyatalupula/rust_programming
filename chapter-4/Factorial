factorial_func <- function(n) {
  if (n == 0) {
    return(1)  # factorial of 0 is 1
  } else if (n < 0) {
    return("Factorial not defined for negative numbers")
  } else {
    fact <- 1
    for (i in 1:n) {
      fact <- fact * i
    }
    return(fact)
  }
}
num <- as.integer(readline(prompt = "Enter a non-negative integer: "))
result <- factorial_func(num)
cat("Factorial of", num, "is", result, "\n")
